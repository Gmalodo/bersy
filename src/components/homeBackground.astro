---
import landscape from "../assets/landscape.svg"
import LandscapeSecond from "../assets/2.svg"
import Flowers from "../assets/flowers.svg"
import { Image } from 'astro:assets';

---
<div class="fixed top-0 left-0 w-screen h-screen overflow-hidden z-0" id="home-bg">
    <Image
            id="bg"
            class="w-screen h-screen object-cover object-bottom"
            src={landscape}
            width={1080}
            height={720}
            alt="landscape"
            fetchpriority="high"
            loading="eager"
    />
    <LandscapeSecond id="middle" class="absolute w-screen h-auto bottom-0"/>
    <Flowers id="flowers" class="absolute w-screen h-auto bottom-0"/>
    <div id="scroll-indicator" class="absolute bottom-12 right-12 w-54 lg:flex opacity-100 hidden">
        <p class="text-center font-semibold text-amber-50 text-shadow-lg/20">
            Scrollez pour plus d'info
        </p>
        <svg class="animate-bounce" width="54" height="54" viewBox="0 0 24 24" fill="white">
            <g data-name="15.Arrow Down">
                <path d="M12 24a12 12 0 1 1 12-12 12.013 12.013 0 0 1-12 12zm0-22a10 10 0 1 0 10 10A10.011 10.011 0 0 0 12 2z"/>
                <path d="m12 18.414-4.707-4.707 1.414-1.414L12 15.586l3.293-3.293 1.414 1.414L12 18.414z"/>
                <path d="M11 6h2v11h-2z"/>
            </g>
        </svg>
    </div>
</div>